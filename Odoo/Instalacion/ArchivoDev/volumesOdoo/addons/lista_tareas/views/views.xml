<odoo>
  <data>
<!-- explicit list view definition -->
<!-- Definimos como es la vista explicita de la litas-->
<record model="ir.ui.view" id="lista_tareas.list">
  <field name="name">lista_tareas list</field>
  <field name="model">lista_tareas.lista_tareas</field>
  <field name="arch" type="xml">
    <tree>
      <field name="tarea"/>
      <field name="prioridad"/>
      <field name="urgente"/>
      <field name="realizada"/>
      <field name="asignado_a"/>
    </tree>
  </field>
</record>

<record model="ir.ui.view" id="lista_tareas.form">
  <field name="name">lista_tareas form</field>
  <field name="model">lista_tareas.lista_tareas</field>
  <field name="arch" type="xml">
    <form>
    <group name="tarea" string="tarea">
      <field name="tarea"/>
    </group>
    <group name="prioridad" string="prioridad">
      <field name="prioridad"/>
    </group>
    <group name="urgente" string="urgente">
      <field name="urgente"/>
    </group>
    <group name="asignado_a" string="asignado_a">
      <field name="asignado_a"/>
    </group>
      <group name="realizada" string="realizada">
      <field name="realizada"/>
      </group>
    </form>
  </field>
</record>



<record model="ir.ui.view" id="lista_tareas.graph">
      <field name="name">lista_tareas graph</field>
      <field name="model">lista_tareas.lista_tareas</field>
      <field name="arch" type="xml">
        <graph string="Tareas" type="line">
          <field name="id" type="measure"/>
          <field name="asignado_a" type="col"/>
          <field name="realizada" type="row"/>
        </graph>
      </field>
    </record>
<!-- actions opening views on models -->
<!-- Acciones al abrir las vistas en los modelos
https://www.odoo.com/documentation/17.0/developer/reference/addons/actions.html
-->
<record model="ir.actions.act_window" id="lista_tareas.action_window">
  <field name="name">Listado de tareas pendientes</field>
  <field name="res_model">lista_tareas.lista_tareas</field>
  <field name="view_mode">tree,form,graph</field>
</record>

<!-- Top menu item -->
<menuitem name="Listado de tareas" id="lista_tareas.menu_root"/>

<!-- menu categories -->
<menuitem name="Opciones Lista Tareas" id="lista_tareas.menu_1" parent="lista_tareas.menu_root"/>

<!-- actions -->
<menuitem name="Mostrar lista" id="lista_tareas.menu_1_list" parent="lista_tareas.menu_1"
          action="lista_tareas.action_window"/>

  </data>
</odoo>